<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WifiCheckApp.MainPage"
             Title="Chấm công">

    <ScrollView>
        <VerticalStackLayout
            Spacing="15"
            Padding="25,0"
            VerticalOptions="Center">

            <Label
                x:Name="TimeLabel"
                Text="00:00:00"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center" 
                Margin="0,0,0,10"/>

            <Frame BorderColor="LightGray" Padding="10" Margin="0,0,0,10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Phương thức chấm công:" 
                           FontAttributes="Bold" 
                           Margin="0,0,0,5"/>

                    <Picker x:Name="AttendanceMethodPicker" 
                            Title="Chọn phương thức chấm công"
                            HorizontalOptions="Fill"/>

                </VerticalStackLayout>
            </Frame>

            <Label
                x:Name="WifiStatusLabel"
                Text="Đang kiểm tra kết nối..."
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" 
                Margin="0,0,0,5"/>

            <Label
                x:Name="LocationStatusLabel"
                Text="Đang kiểm tra vị trí..."
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" 
                Margin="0,0,0,15"/>

            <Label
                x:Name="EmailLabel"
                Text=""
                SemanticProperties.HeadingLevel="Level2"
                FontSize="16"
                HorizontalOptions="Center"
                IsVisible="False"
                Margin="0,0,0,10"/>

            <Frame x:Name="EmailFrame" BorderColor="LightGray" Padding="10" Margin="0,0,0,10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Nhập email để chấm công:" 
                           FontAttributes="Bold" 
                           Margin="0,0,0,5"/>

                    <Entry x:Name="EmailEntry" 
                           Placeholder="Email của bạn"
                           Keyboard="Email"
                           HorizontalOptions="Fill"/>

                    <Button x:Name="SaveEmailButton"
                            Text="Lưu email"
                            Clicked="OnSaveEmailClicked"/>
                </VerticalStackLayout>
            </Frame>

            <Grid x:Name="ButtonsPanel" 
                  IsVisible="False" 
                  Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CheckInButton"
                        Text="Chấm công"
                        BackgroundColor="Green"
                        TextColor="White"
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        Clicked="OnCheckInClicked"/>

                <Button x:Name="CheckOutButton"
                        Text="Ra về"
                        BackgroundColor="Orange"
                        TextColor="White"
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Clicked="OnCheckOutClicked"/>
            </Grid>

            <Frame x:Name="RefreshPanel" 
                   BorderColor="LightGray" 
                   Padding="10" 
                   Margin="0,0,0,10"
                   IsVisible="True">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="RefreshLabel" 
                        Text="Không thể chấm công vào lúc này" 
                           FontAttributes="Bold" 
                           Margin="0,0,0,5"/>

                    <Button x:Name="RefreshButton"
                            Text="Làm mới"
                            Clicked="OnRefreshClicked"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
